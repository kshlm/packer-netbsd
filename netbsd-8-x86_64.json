{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<enter><wait5>",
        "<enter><wait5>",
        "e<enter><wait5>",
        "<enter><wait5>",
        "dhclient vioif0<enter>",
        "ftp -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install-8-x86_64.sh<enter><wait5>",
        "sh /tmp/install.sh<enter>"
      ],
      "boot_wait": "15s",
      "disk_interface": "virtio-scsi",
      "disk_size": 5000,
      "disk_cache": "unsafe",
      "disk_discard": "unmap",
      "disk_compression": true,
      "iso_skip_cache": true,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_urls": [ "http://ftp.fr.netbsd.org/pub/NetBSD-daily/HEAD/201511061730Z/images/NetBSD-7.99.21-amd64.iso" ],
      "net_device": "virtio-net",
      "output_directory": "output/netbsd-8-x86_64-qemu/",
      "machine_type": "pc-i440fx-1.7",
      "qemuargs": [
        [
          "-m",
          "512"
        ]
      ],
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "packer",
      "ssh_username": "root",
      "ssh_wait_timeout": "1200s",
      "type": "qemu",
      "vm_name": "netbsd-8-x86_64"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/reboot.sh"
      ],
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/cloudinit.sh",
        "scripts/cleanup.sh"
      ],
      "pause_before": "30s",
      "type": "shell"
    }
  ]
}
